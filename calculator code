      break

if typ == "6":
  while True:
    try:
      nummer1 = float(input("Ange nummer:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
      continue
    else: break

if typ == "7":
  while True:
    try:
      nummer1 = float(input("Ange x:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
      continue
    else: break
  while True:
    try:
      nummer2 = float(input("Ange nummer:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
      continue
    else:
      break




if(typ == "1"):
  svar = nummer1 + nummer2
if(typ == "2"):
  svar = nummer1 - nummer2
if(typ == "3"):
  svar = nummer1 * nummer2
if(typ == "4"):
  svar = nummer1 / nummer2
if(typ == "5"):
  svar = nummer1 ** nummer2
if(typ == "6"):
  svar = nummer1 ** 0.5
if(typ == "7"):
  a = 1 / nummer1
  svar = nummer2 ** a



if(typ == "1"):
  print(str(nummer1) + " + " + str(nummer2) + " = " + str(svar))
if(typ == "2"):
  print(str(nummer1) + " - " + str(nummer2) + " = " + str(svar))
if(typ == "3"):
  print(str(nummer1) + " * " + str(nummer2) + " = " + str(svar))
if(typ == "4"):
  print(str(nummer1) + " / " + str(nummer2) + " = " + str(svar))
if(typ == "5"):
  print(str(nummer1) + " ^ " + str(nummer2) + " = " + str(svar))
if(typ == "6"):
  print("√" + str(nummer1) + " = " + str(svar))
if(typ =="7"):
  print(str(nummer1) + "√ " + str(nummer2) + " = " + str(svar))
