print("(6) √")
print("(7) x√")
typ = input("Välj 1-7 och tryck enter:")
while typ not in ("1", "2", "3", "4", "5", "6", "7"):
  typ = input("Du gjorde fel, välj mellan 1-7 och tryck enter")


if typ == "1":
  while True:
    try:
      nummer1 = float(input("Ange första termen:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
      continue
    else: 
      break
  while True:
    try:
      nummer2 = float(input("Ange andra termen:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
      continue
    else:
      break

if typ == "2":
  while True:
    try:
      nummer1 = float(input("Ange första termen:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
      continue
    else: break
  while True:
    try:
      nummer2 = float(input("Ange andra termen:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
      continue
    else:
      break

if typ == "3":
  while True:
    try:
      nummer1 = float(input("Ange första faktorn:"))
    except ValueError:
      print("Du gjorde fel, försök igen.")
